{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Ajustado para segurança básica */
    "strict": true, // Ativado: protege contra valores null/undefined inesperados
    "noUnusedLocals": true, // Avisa se você esqueceu variáveis sem uso
    "noUnusedParameters": false,
    "noImplicitAny": false, // Mantido false para facilitar se você ainda está migrando
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
